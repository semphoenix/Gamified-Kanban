<div class="kanban-board">

    <header>
        <div class="group-heading">    
            <h1 class="group-heading-text">{{groupName}}</h1>
            <h2 class="group-id">{{kanbanId}}</h2>
        </div>
    </header>

    <div class="kanban-block" id="side-column">
        <div class="group-button-block">
            <form class="choose-group-form" id="choose-group-form">
                <label for="choose-group">Groups</label>
                <select name="choose-group" id="choose-group" form="choose-group-form">
                    {{#each Groups}}
                    <option class="choosen-group-option" value="{{this}}">{{this}}</option>
                    {{/each}}
                </select>
                <input type="submit" value="submit"/>        
            </form>
        </div>

        <div class="create-task-button">
            <button id="task-button">Create new task</button>
            <!-- Will open create-new-task-block div on click -->
        </div>

        <div class="gacha-button">
            <a href="/gacha"><button id="gacha-button">Gacha</button></a>
        </div>
        <div class="completed-task-button">
            <a href="/completedtasks"><button id="completed-tasks-button">Completed Tasks</button></a>
        </div>
        <div class="profile-button">
            <a href="/profile"><button id="profile-button">Profile</button></a>
        </div>

    </div>

    <div class="kanban-block" id="todo">
        <h3 id="Todo-title">To Do</h3>
        {{#each todoTasks}}
            <div class="kanban-task-block">
                <h3 class="task-name">{{this.name}}</h3>
                <p class="task-description">{{this.description}}</p>
                <p class="task-user">{{this.user}}</p>
            </div>
        {{/each}}
    </div>

    <div class="kanban-block" id="inprogress">
        <p>In Progress</p>
        {{#each inprogressTasks}}
            <div class="kanban-task-block">
                <h3 class="task-name">{{this.name}}</h3>
                <p class="task-description">{{this.description}}</p>
                <p class="task-user">{{this.user}}</p>
            </div>
        {{/each}}
    </div>

    <div class="kanban-block" id="inreview">
        <p>In Review</p>
        {{#each inreviewTasks}}
            <div class="kanban-task-block">
                <h3 class="task-name">{{this.name}}</h3>
                <p class="task-description">{{this.description}}</p>
                <p class="task-user">{{this.user}}</p>
                <form class="task-vote-form">
                    <label for="task-{{this.name}}-yes">Sucessfully Completed</label>
                    <input id="task-{{this.name}}-yes" type="radio" class="kanban-task-vote" name="Yes" value="Yes">
                    
                    <label for="task-{{this.name}}-no">Not Completed</label>
                    <input id="task-{{this.name}}-no" type="radio" class="kanban-task-vote" name="False" value="No">

                    <input type="submit" value="Submit">
                </form>
            </div>
        {{/each}}
    </div>


    <div class="create-new-task-block" id="create-new-task-block">
        <p>New Task</p>
        <form class="create-task-form" id="create-task-form">
            <label class="create-task-form-label" for="task-name">Task</label>
            <input class="create-task-form-input" type="text" name="task-name" id="task-name" required>
            
            <label class="create-task-form-label" for="task-description">Description</label>
            <textarea class="create-task-form-input" name="task-description" id="task-description" required></textarea>
            
            <label class="create-task-form-label" for="task-difficulty">Difficulty</label>
            <select class="create-task-form-input" name="task-difficulty" id="task-difficulty" required>
                <option value="easy">Easy</option>
                <option value="medium">Medium</option>
                <option value="hard">Hard</option>
            </select>
            
            <div class="create-task-buttons">
                <button type="submit" id="save-button">Submit</button>
                <button type="button" id="cancel-button" onclick="closeTask()">Close</button>
            </div>
        </form>
    </div>
</div>

