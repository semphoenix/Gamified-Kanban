<div class="profile-container">
    <main>
        <div class="groupColumn">
            <h1>Groups</h1>
            <div class="group-button-block">
                <form action="/user/privateUser" id="profile-choose-group-form" method="post">
                    <label for="chooseGroup">Group</label>
                    <select name="chooseGroup" id="chooseGroup" form="profile-choose-group-form">
                        {{#each groups}}
                        <option class="choosen-group-option" value="{{this._id}}">{{this.groupName}}</option>
                        {{/each}}
                    </select>
                    <input type="submit" value="submit">        
                </form>
            </div>

            <div class="accounts-button">
                <h2>{{user}}</h2>
                 <a href="/user/accountsPage" class="profile-link">Accounts</a>
            </div>

            <div class="kanban-button">
                <h2>{{currentKanban.groupName}}</h2>
                <a href="/kanban/kanbans" class="profile-link">Kanban Page</a>
            </div>
            
            <div class="logout-button" id="logout-button">
                <button onclick="window.location.href='/logout';">Logout</button>
            </div>
        </div>

        

        <div class="prizeColumn">
            <h1>Prizes</h1>
            <div class="prize-block">
                <form action="/user/privateUser/selectColor" class="prize-form" id="prize-color-form" method="POST">
                    <label for="choose-color">Color Choices</label>
                    <select name="chooseColor" id="choose-color" form="prize-color-form">
                        {{#each prizes.colorRewards}}
                        <option class="prize-color-option" value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <button type="submit" value="submit">Apply</button>         
                </form>
            </div>

            <div class="prize-block">
                <form action="/user/privateUser/selectBorder" class="prize-form" id="prize-border-form" method="POST">
                    <label for="choose-border">Border Choices</label>
                    <select name="chooseBorder" id="choose-border" form="prize-border-form">
                        {{#each prizes.borderRewards}}
                        <option class="prize-border-option" value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <button type="submit" value="submit">Apply</button>        
                </form>
            </div>

            <!-- MUST CHANGE TO NOT USE HTML BASED STYLING (check option tag)-->

            
            <div class="prize-block">
                <form action="/user/privateUser/selectPicture" class="choose-prize-picture-form" id="prize-picture-form" method="POST">
                    <label for="choose-picture">Picture Choices</label>
                    <select name="choosePicture" id="choose-picture" form="prize-picture-form">
                        {{#each prizes.profileRewards}}
                        <option class="prize-picture-option" value="{{this}}">{{this}}</option>
                        {{/each}}
                    </select>
                    <button type="submit" value="submit">Apply</button>      
                </form>
            </div>

             <div id="profile-picture">
                <img src="../public/assets/{{selectedReward.profileReward}}.jpg" alt="prize picture">
            </div>


        </div>
        
    </main>
</div>